package string;

public class Strings {

	public static void main(java.lang.String[] args) {


		Strings original = "abcde FGHIJ ABC abc DEFG ";
		Strings s01 = original.toLowerCase();
		Strings s02 = original.toUpperCase();
		Strings s03 = original.trim();
		Strings s04 = original.substring(2);
		Strings s05 = original.substring(2, 9);
		Strings s06 = original.replace('a', 'x');
		Strings s07 = original.replace("abc", "xy");
		int i = original.indexOf("bc");
		int j = original.lastIndexOf("bc");
		System.out.println("Original: -" + original + "-");
		System.out.println("toLowerCase: -" + s01 + "-");
		System.out.println("toUpperCase: -" + s02 + "-");
		System.out.println("trim: -" + s03 + "-");
		System.out.println("substring(2): -" + s04 + "-");
		System.out.println("substring(2, 9): -" + s05 + "-");
		System.out.println("replace('a', 'x'): -" + s06 + "-");
		System.out.println("replace('abc', 'xy'): -" + s07 + "-");
		System.out.println("Index of 'bc': " + i);
		System.out.println("Last index of 'bc': " + j);
		
		
	}

}
